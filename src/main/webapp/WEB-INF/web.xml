<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Phone Book Servlet Maven</display-name>

    <servlet>
        <servlet-name>getAllContactsServlet</servlet-name>
        <servlet-class>ru.jeanponomarev.servlet.GetAllContactsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddContactServlet</servlet-name>
        <servlet-class>ru.jeanponomarev.servlet.AddContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteContactServlet</servlet-name>
        <servlet-class>ru.jeanponomarev.servlet.DeleteContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteContactListServlet</servlet-name>
        <servlet-class>ru.jeanponomarev.servlet.DeleteContactListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getAllContactsServlet</servlet-name>
        <url-pattern>/api/getContacts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddContactServlet</servlet-name>
        <url-pattern>/api/addContact</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteContactServlet</servlet-name>
        <url-pattern>/api/deleteContact</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteContactListServlet</servlet-name>
        <url-pattern>/api/deleteContactList</url-pattern>
    </servlet-mapping>
</web-app>